<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Description>A .NET Core DDS (Direct Draw Surface) reader and converter. It is composed of a development library.</Description>
    <Version>1.0.1</Version>
    <RepositoryUrl>https://github.com/hguy/dds-reader</RepositoryUrl>
    <PackageProjectUrl>https://github.com/hguy/dds-reader</PackageProjectUrl>
    <RepositoryType></RepositoryType>
    <PackageReleaseNotes>A .NET Core DDS (Direct Draw Surface) reader and converter. It is composed of a development library.</PackageReleaseNotes>
    <PackageTags>.NET Core DDS Direct Draw Surface reader converter</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Pfim" Version="0.5.2" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-beta0005" />
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>

</Project>
